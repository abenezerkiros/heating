---
import { SITE, LOGO_IMAGE } from '../config';
---

<header class="sticky top-0 z-50 w-full bg-white/80 backdrop-blur-md border-b border-gray-100 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-start items-center h-16">
      <!-- Logo Only -->
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-2 group">
          {LOGO_IMAGE.enable && SITE.logo && <img src={SITE.logo} alt="Logo" class="h-10 w-auto object-contain" />}
          {SITE.labName && (
            <div class="flex flex-col leading-tight">
              <span class="font-bold text-gray-900 text-xl leading-tight group-hover:text-blue-600 transition-colors">
                LONDON HEATING
              </span>
              {SITE.university && (
                <span class="text-gray-500 text-sm font-light">
                </span>
              )}
            </div>
          )}
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  /* Remove any body scroll locking since we don't have mobile menu anymore */
  body {
    overflow: auto !important;
  }
</style>